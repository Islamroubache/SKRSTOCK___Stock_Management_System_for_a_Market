<Window x:Class="StockManagementApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StockManagementApp"
        mc:Ignorable="d" x:Name="home"
        Title="لوحة تحكم إدارة المخزون" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"  WindowStyle="None"
        Background="#ffffff" AllowsTransparency="True"
        ResizeMode="NoResize" WindowState="Maximized"
        FlowDirection="RightToLeft"
        >

    <Border CornerRadius="15" Background="{DynamicResource PrimaryBackgroundColor}" BorderThickness="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Window Control Buttons -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10,0,10,0">
                <Button x:Name="btnMinimize" Style="{StaticResource WindowControlButtonStyle}" Click="btnMinimize_Click">
                    <TextBlock Text="&#xE921;" FontFamily="Segoe MDL2 Assets"/>
                </Button>
                <Button x:Name="btnRestore" Style="{StaticResource WindowControlButtonStyle}" Click="btnRestore_Click">
                    <TextBlock x:Name="restoreIcon" Text="&#xE923;" FontFamily="Segoe MDL2 Assets"/>
                </Button>
                <Button x:Name="btnClose" Style="{StaticResource WindowControlButtonStyle}" Click="btnClose_Click" Tag="CloseButton">
                    <TextBlock Text="&#xE8BB;" FontFamily="Segoe MDL2 Assets"/>
                </Button>
            </StackPanel>

            <!-- Right Sidebar Menu (was Left) -->
            <Border Background="#2DB1A9" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2"  BorderThickness="3" CornerRadius="20" Margin="10,50,0,28" >
                <Border.Effect>
                    <DropShadowEffect Color="Black"
      Opacity="0.3"
      Direction="500"
      ShadowDepth="1"
      BlurRadius="10"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- App Logo and Title -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                        <Border Width="40" Height="40" Background="#ffffff" CornerRadius="8">
                            <TextBlock Text="مخ" Foreground="#3182CE" FontWeight="Bold" FontSize="16" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="إدارة المخزون" FontSize="18" FontWeight="Bold" Foreground="#2D3748" 
                                   VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </StackPanel>
                    
                    <!-- Menu Items -->
                    <StackPanel Grid.Row="1" Margin="0,20,0,0" x:Name="menuPanel">
                        <Button x:Name="btnDashboard" Style="{StaticResource ActiveMenuButtonStyle}" Click="DashboardButton_Click" >
                            <StackPanel Orientation="Horizontal">
                              
                                <TextBlock Text="&#xE80F;" FontFamily="Segoe MDL2 Assets" Margin="15,0,0,0"/>
                                <TextBlock Text=" لوحة التحكم " Margin="0,0,0,0"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnInventory" Style="{StaticResource MenuButtonStyle}" Click="InventoryButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE7C1;" FontFamily="Segoe MDL2 Assets" Margin="15,0,0,0"/>
                                <TextBlock Text=" المخزون" Margin="0,0,0,0"/>

                            </StackPanel>
                        </Button>
                        <Button x:Name="btnProducts" Style="{StaticResource MenuButtonStyle}" Click="ProductsButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8F1;" FontFamily="Segoe MDL2 Assets" Margin="15,0,0,0"/>

                                <TextBlock Text=" المنتجات " Margin="0,0,0,0"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnOrders" Style="{StaticResource MenuButtonStyle}" Click="OrdersButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8A1;" FontFamily="Segoe MDL2 Assets" Margin="15,0,0,0"/>

                                <TextBlock Text=" الطلبات" Margin="0,0,0,0"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnSuppliers" Style="{StaticResource MenuButtonStyle}" Click="SuppliersButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE716;" FontFamily="Segoe MDL2 Assets" Margin="15,0,0,0"/>

                                <TextBlock Text=" الموردين " Margin="0,0,0,0"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnReports" Style="{StaticResource MenuButtonStyle}" Click="ReportsButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE9D9;" FontFamily="Segoe MDL2 Assets" Margin="15,0,0,0"/>

                                <TextBlock Text=" التقارير" Margin="0,0,0,0"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnSettings" Style="{StaticResource MenuButtonStyle}" Click="SettingsButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets" Margin="15,0,0,0"/>

                                <TextBlock Text=" الإعدادات" Margin="0,0,0,0"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- User Profile -->
                    <Border Grid.Row="2" Padding="20" BorderBrush="#E2E8F0" BorderThickness="0,1,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Width="40" Height="40" Background="#E2E8F0" CornerRadius="20">
                                <TextBlock Text="مح" Foreground="#4A5568" FontWeight="SemiBold" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="محمد أحمد" FontWeight="SemiBold" Foreground="#2D3748"/>
                                <TextBlock Text="مدير النظام" FontSize="12" Foreground="#6E7A8A"/>
                            </StackPanel>

                            <Button Grid.Column="2" Background="Transparent" BorderThickness="0" Padding="5">
                                <TextBlock Text="&#xE712;" FontFamily="Segoe MDL2 Assets" Foreground="#6E7A8A"/>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Main Content Area -->
            <Border
                Grid.Column="1"
                Grid.Row="1"
                Margin="10,15,20,30"
                BorderThickness="2"
                BorderBrush="#2DB1A9"
                CornerRadius="15"
                Background="#Fffffc">
                <Frame x:Name="frameContent" NavigationUIVisibility="Hidden" Margin="10" />
            </Border>
        </Grid>
    </Border>
</Window>