<Page x:Class="StockManagementApp.pages.InventoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"

      xmlns:local="clr-namespace:StockManagementApp.pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="InventoryPage"
      FlowDirection="RightToLeft"
      FontFamily="pack://application:,,,/fonts/29azer">

    <Grid Background="#F8FfFf" >

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="  إدارة المخزون" FontSize="26" Margin="0,8,0,0" FontWeight="Bold" Foreground="#2D3748"/>
                <TextBlock Text="    إدارة مخزون المنتجات وتتبع الكميات." 
                           Foreground="#6E7A8A" Margin="0,6,0,0" FontSize="13" FontWeight="SemiBold"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <Button x:Name="btnAddStock" Style="{StaticResource GreenButtonStyle}" 
                        Width="120" Height="40" Margin="15,0,0,0" 
                        Click="AddStock_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" Foreground="White" Margin="0,0,5,0"/>
                        <TextBlock Text="إضافة مخزون" Foreground="White" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>

                <Border Background="White" CornerRadius="0,8,8,0" Width="450" Height="40"
                        BorderBrush="#E2E8F0" BorderThickness="1" Margin="0,0,10,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" BorderThickness="0" Margin="10,0,10,0" 
                                 VerticalAlignment="Center" Background="Transparent"
                                 Foreground="#2D3748" FontSize="14"
                                 Text="بحث عن منتج في المخزون..."/>
                        <TextBlock Grid.Column="1" Text="&#xE721;" FontFamily="Segoe MDL2 Assets" Foreground="#6E7A8A" 
                                   Margin="0,0,15,0" VerticalAlignment="Center"/>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Summary Cards -->
        <Grid Grid.Row="1" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Items Card -->
            <Border Style="{StaticResource DashboardCardStylee}" Grid.Column="0">
                <StackPanel Orientation="Horizontal">
                    <Border Width="40" Height="40" Background="#EBF8FF" CornerRadius="8" Margin="0,0,10,0">
                        <TextBlock Text="&#xF404;" FontFamily="Segoe MDL2 Assets" Foreground="#3182CE" 
                                   FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel>
                        <TextBlock Text="إجمالي العناصر" Style="{StaticResource CardValueStylee}" FontSize="14"/>
                        <TextBlock Text="1,234" Style="{StaticResource CardValueStylee}" FontSize="24"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Low Stock Card -->
            <Border Style="{StaticResource DashboardCardStylee}" Grid.Column="1">
                <StackPanel Orientation="Horizontal">
                    <Border Width="40" Height="40" Background="#FFF5F5" CornerRadius="8" Margin="0,0,10,0">
                        <TextBlock Text="&#xE7BA;" FontFamily="Segoe MDL2 Assets" Foreground="#E53E3E" 
                                   FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel>
                        <TextBlock Text="مخزون منخفض" Style="{StaticResource CardValueStyle}" FontSize="14"/>
                        <TextBlock Text="28" Style="{StaticResource CardValueStylee}" FontSize="24" Foreground="#E53E3E"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Out of Stock Card -->
            <Border Style="{StaticResource DashboardCardStylee}" Grid.Column="2">
                <StackPanel Orientation="Horizontal">
                    <Border Width="40" Height="40" Background="#FFFAF0" CornerRadius="8" Margin="0,0,10,0">
                        <TextBlock Text="&#xE894;" FontFamily="Segoe MDL2 Assets" Foreground="#DD6B20" 
                                   FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel>
                        <TextBlock Text="نفد المخزون" Style="{StaticResource CardValueStylee}" FontSize="14"/>
                        <TextBlock Text="5" Style="{StaticResource CardValueStylee}" FontSize="24" Foreground="#DD6B20"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Total Value Card -->
            <Border Style="{StaticResource DashboardCardStylee}" Grid.Column="3">
                <StackPanel Orientation="Horizontal">
                    <Border Width="40" Height="40" Background="#F0FFF4" CornerRadius="8" Margin="0,0,10,0">
                        <TextBlock Text="&#xE8A1;" FontFamily="Segoe MDL2 Assets" Foreground="#38A169" 
                                   FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel>
                        <TextBlock Text="قيمة المخزون" Style="{StaticResource CardValueStylee}" FontSize="14"/>
                        <TextBlock Text="245,680 د.ج" Style="{StaticResource CardValueStylee}" FontSize="20"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

